{
  "name": "SendGrid",
  "type": "executer",
  "execProgram": "node",
  "main": "app.js",
  "exposeRoute": true,
  "imgUrl": "logo.png",
  "version": "1.0.4",
  "description": "Integration with SendGrid API",
  "keywords": [
    "mail",
    "email",
    "sendgrid",
    "send",
    "grid",
    "notification"
  ],
  "settings": [
    {
      "name": "token",
      "viewName": "API Token",
      "type": "vault"
    }
  ],
  "methods": [
    {
      "name": "sendEmail",
      "viewName": "Send Email",
      "params": [
        {
          "name": "token",
          "viewName": "API Token",
          "type": "vault"
        },
        {
          "name": "to",
          "viewName": "To",
          "type": "text"
        },
        {
          "name": "cc",
          "viewName": "CC",
          "type": "text"
        },
        {
          "name": "bcc",
          "viewName": "BCC",
          "type": "text"
        },
        {
          "name": "from",
          "viewName": "From",
          "type": "string"
        },
        {
          "name": "replyTo",
          "viewName": "Reply To",
          "type": "string"
        },
        {
          "name": "subject",
          "viewName": "Subject",
          "type": "string"
        },
        {
          "name": "text",
          "viewName": "Text",
          "type": "text"
        },
        {
          "name": "html",
          "viewName": "HTML",
          "type": "text"
        },
        {
          "name": "template",
          "viewName": "Template",
          "type": "autocomplete",
          "autocompleteType": "function",
          "functionName": "listTemplates"
        },
        {
          "name": "dynamicTemplateData",
          "viewName": "Dynamic Template Data",
          "type": "text"
        },
        {
          "name": "attachmentPaths",
          "viewName": "Attachment Paths",
          "type": "text"
        },
        {
          "name": "categories",
          "viewName": "Categories",
          "type": "autocomplete",
          "autocompleteType": "function",
          "functionName": "listCategoriesWithNew"
        },
        {
          "name": "sendAt",
          "viewName": "Send At",
          "type": "autocomplete",
          "autocompleteType": "function",
          "functionName": "getSendAt"
        },
        {
          "name": "headers",
          "viewName": "Headers",
          "type": "text"
        },
        {
          "name": "customArgs",
          "viewName": "Custom Args",
          "type": "text"
        }
      ]
    },
    {
      "name": "getEmailStats",
      "viewName": "Get Email Stats",
      "params": [
        {
          "name": "token",
          "viewName": "API Token",
          "type": "vault"
        },
        {
          "name": "startDate",
          "viewName": "Start Date",
          "type": "autocomplete",
          "autocompleteType": "function",
          "functionName": "getStartDate"
        },
        {
          "name": "endDate",
          "viewName": "End Date",
          "type": "autocomplete",
          "autocompleteType": "function",
          "functionName": "getEndDate"
        },
        {
          "name": "limit",
          "viewName": "Limit",
          "type": "string"
        },
        {
          "name": "offset",
          "viewName": "Offset",
          "type": "string"
        }
      ]
    },
    {
      "name": "getEventWebhooks",
      "viewName": "Get Event Webhook Settings",
      "params": [
        {
          "name": "token",
          "viewName": "API Token",
          "type": "vault"
        }
      ]
    },
    {
      "name": "getCategories",
      "viewName": "Get Categories",
      "params": [
        {
          "name": "token",
